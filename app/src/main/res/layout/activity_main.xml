<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@null"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:text="仅修改以下四个值：\n（系统设置中也会跟随修改展示） \n min_fresh_rate \n peak_refresh_rate、user_refresh_rate、miui_refresh_rate" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="请先去权限管理页面授予 '修改系统设置' 权限\n然后使用adb给当前App授权（长按可以复制）："/>
        <TextView
            android:id="@+id/permissionGrandPrompt"
            android:layout_marginBottom="15dp"
            android:textColor="@color/red"
            android:textColorHint="@color/red"
            android:gravity="center_horizontal|center_vertical"
            android:hint="adb shell pm grant {packageName} android.permission.WRITE_SECURE_SETTINGS"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textIsSelectable="true"
            android:longClickable="true"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="当前APP的实时帧率："/>
            <TextView
                android:id="@+id/refreshRate"
                android:textColor="@color/red"
                tools:text="90.00"
                android:paddingHorizontal="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(进入后台会停止计算实时帧率)"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="80dp">

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/powerSaveMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="节能模式(min_fresh_rate=0Hz)  "
                android:textStyle="bold"
                android:textColor="@color/gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="快捷设置" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/miui60Hz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:paddingHorizontal="0dp"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="60Hz" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/miui120Hz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:paddingHorizontal="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="120Hz" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/miuiCustom90Hz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:paddingHorizontal="25dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="90Hz" />
            </LinearLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="25dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/background_round_panel_light_gray"
                android:gravity="center_horizontal|center_vertical">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/userPreferedInput"
                    android:visibility="gone"
                    tools:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal"
                    android:background="@null">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/miuiCustomValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number|textVisiblePassword"
                        android:digits="0123456789"
                        android:textSize="15sp"
                        android:gravity="center_horizontal|center_vertical"
                        android:hint="自定义刷新率" />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Hz"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/userPreferedSpinner"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:prompt="@string/supportedRefreshRate"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/miuiCustomValueCommit"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textAllCaps="false"
                    android:backgroundTint="@color/Pink"
                    android:textColor="@color/black"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="6dp"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="使用自定义刷新率" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </LinearLayout>
</ScrollView>