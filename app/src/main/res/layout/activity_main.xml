<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@null"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16.0dip"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40.0dip"
        android:gravity="center"
        android:text="适用于小米11（未测试过其他设备），仅修改以下三个值：\n min_fresh_rate、peak_refresh_rate、user_refresh_rate" />

    <LinearLayout
        android:layout_marginTop="30.0dip"
        android:orientation="horizontal"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前APP的实时帧率："/>
        <TextView
            android:id="@+id/refreshRate"
            android:textColor="@color/red"
            tools:text="90.00"
            android:paddingHorizontal="5.0dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(进入后台会停止计算实时帧率)"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20.0dip"
        android:gravity="center"
        android:text="调整后系统的设置页面也会同步修改。"
        android:textSize="18.0sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="50.0dip"
        android:layout_marginBottom="80.0dip">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/miui60Hz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="25.0dip"
                android:layout_marginVertical="5.0dip"
                android:gravity="center_horizontal|center_vertical"
                android:text="MIUI自带 的 60Hz" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/miui120Hz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="25.0dip"
                android:layout_marginVertical="5.0dip"
                android:gravity="center_horizontal|center_vertical"
                android:text="MIUI自带 的 120Hz" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/miuiCustom90Hz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="25.0dip"
                android:layout_marginTop="25.0dip"
                android:gravity="center_horizontal|center_vertical"
                android:text="拓展 的 90Hz" />
    </LinearLayout>

</LinearLayout>